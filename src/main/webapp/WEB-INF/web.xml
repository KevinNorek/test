<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">


	<servlet>
		<servlet-name>sendNotificationReminders</servlet-name>
		<servlet-class>io.fourcast.bnppf.servlets.NotificationServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>sendNotificationReminders</servlet-name>
		<url-pattern>/sendNotificationReminders</url-pattern>
	</servlet-mapping>



	<filter>
		<filter-name>ObjectifyFilter</filter-name>
		<filter-class>com.googlecode.objectify.ObjectifyFilter</filter-class>
	</filter>

	<servlet>
		<servlet-name>SystemServiceServlet</servlet-name>
		<servlet-class>com.google.api.server.spi.SystemServiceServlet</servlet-class>
		<init-param>
			<param-name>services</param-name>
			<param-value>
				io.fourcast.bnppf.service.AdminService,
                io.fourcast.bnppf.service.UserService,
                io.fourcast.bnppf.service.SmartService,
                io.fourcast.bnppf.service.CocamatService,
                io.fourcast.bnppf.service.SpaceService,
                io.fourcast.bnppf.service.LmdService,
                io.fourcast.bnppf.service.CommsService,
                io.fourcast.bnppf.service.ChannelsService,
                io.fourcast.bnppf.service.FieldOptionService,
                io.fourcast.bnppf.service.ChannelOptionService,
                io.fourcast.bnppf.service.SearchService,
				io.fourcast.bnppf.service.ReportService,
				io.fourcast.bnppf.service.NotificationService,
				io.fourcast.bnppf.service.FilterService
            </param-value>
		</init-param>
	</servlet>

	<!-- <filter-mapping> <filter-name>appstats</filter-name> <url-pattern>/*</url-pattern> 
		</filter-mapping> -->
	<filter-mapping>
		<filter-name>ObjectifyFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<servlet-mapping>
		<servlet-name>SystemServiceServlet</servlet-name>
		<url-pattern>/_ah/spi/*</url-pattern>
	</servlet-mapping>


	<security-constraint>
		<web-resource-collection>
			<web-resource-name>everything</web-resource-name>
			<url-pattern>/*</url-pattern>
		</web-resource-collection>
		<user-data-constraint>
			<transport-guarantee>CONFIDENTIAL</transport-guarantee>
		</user-data-constraint>
	</security-constraint>


</web-app>
